<h1>Chat box</h1>


<div id="view">
<p>
<% @messages.each do |message| %>
<%= message.body %><br>
<%= time_ago_in_words(message.created_at) %> ago<br><br>
<% end %>
</p>
</div>



<div id="text_field">
<%= form_for :message do |f| %>
<%= f.label :text %>
<%= f.text_field :body %>
<%= f.submit "Send" %>
<% end %>
<p></p>
</div>